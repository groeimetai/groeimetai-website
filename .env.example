# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=groeimetai-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=groeimetai-prod
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=groeimetai-prod.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Server-side)
FIREBASE_ADMIN_PROJECT_ID=groeimetai-prod
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@groeimetai-prod.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=groeimetai-prod
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_PRO_MODEL=gemini-pro
GEMINI_VISION_MODEL=gemini-pro-vision

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your-key
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_BASIC=price_basic_monthly
STRIPE_PRICE_ID_PRO=price_pro_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_custom

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Configuration (SMTP)
# For Gmail, use smtp.gmail.com, port 587, and an app password
# Authenticate with niels@groeimetai.io but send from info@groeimetai.io (alias)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=niels@groeimetai.io
SMTP_PASS=your-app-password-here

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.groeimetai.io
NEXT_PUBLIC_API_URL=https://api.groeimetai.io
NEXT_PUBLIC_WEBSOCKET_URL=wss://ws.groeimetai.io

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_VIDEO_CONSULTATIONS=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Security
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
NODE_ENV=production
DEBUG=false